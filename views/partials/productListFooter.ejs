    function addToCart(productId, userId) {
        if (userId) {
            $.get(`/add-to-cart/${productId}`)
                .done(function (response) {
                    if (response.status) {
                        Swal.fire({
                            title: "Product added to cart!",
                            icon: "success",
                            confirmButtonText: "OK",
                        }).then((result) => {
                            if (result.isConfirmed) {
                                location.reload();
                            }
                        });
                        return;
                    }
                    Swal.fire({
                        title: "Out of stock!",
                        icon: "success",
                        confirmButtonText: "OK",
                    });
                })
                .fail(function (error) {
                    console.log(error);
                });
