    <header class="header" data-header>
        <div class="container">
            <a href="/" class="logo">2WHEELS</a>

            
            <div class="input-wrapper">
                <form action="/product-search/?search"  method="get" onsubmit="return validateForm()">
                <input type="search" name="search" placeholder="Search Anything..." class="input-field"  id="product-search"/>
                <button type="submit">
                <ion-icon name="search-outline" aria-hidden="true" ></ion-icon></button>
            </form>
            </div>
       

            <div class="header-action">
                <% if(user){ %>
                <div><%=user.name%></div>
                <% } %>
                <div class="dropdown">       
                        <a href="/login">
                            <button class="header-action-btn">
                            <ion-icon name="person-outline" aria-hidden="true" id="user-btn"></ion-icon>
                        </a>
                    </button>
                    <%if(user){%>

                    <div class="dropdown-content" >
                        <div>
                            <a href="/edit-profile">profile</a>
                        </div>
                        <div  >
                            <a href="/order">orders</a>
                        </div>
                        <div >
                            <a href="/address">address</a>
                        </div>
                        <div  >
                            <a href="/wallet">wallet</a>
                        </div>

                        <div  >
                            <a href="/logout">Logout</a>
                        </div>
                        
                    </div>
                    
                    


                    <%}%>
                
                </div>
                <button class="header-action-btn" aria-label="favorite list">
                    <% if(user) {%>
                    <a href="/wishlist">
                    <ion-icon name="heart-outline" aria-hidden="true"></ion-icon></a>
                    <% }else {%>

                        <a href="/login">
                            <ion-icon name="heart-outline" aria-hidden="true"></ion-icon></a>
                        <% } %>

                <% if(user) {%>
                    <span class="wishlist-count btn-badge"><%= user.wish %></span>
                    <% } else { %>
                        <span class="btn-badge">0</span>
                     <% } %>
                </button>

                <button class="header-action-btn" aria-label="cart">
                    <% if(user) {%>
                    <a href="/cart">
                    <ion-icon name="bag-handle-outline" aria-hidden="true" id="cart-badge"></ion-icon></a>
                    <% }else{ %>

                        <a href="/login">
                            <ion-icon name="bag-handle-outline" aria-hidden="true" id="cart-badge"></ion-icon></a>

                    <% } %>

                    <% if(user) { %>
                        <span class="cart-badge btn-badge"><%= user.count %></span>
                      <% } else { %>
                        <span class="btn-badge">0</span>
                      <% } %>
                      
                </button>

                <button class="header-action-btn" aria-label="open menu" data-nav-toggler>
                    <ion-icon name="menu-outline" aria-hidden="true"></ion-icon>
                </button>
            </div>
        </div>
    </header>
